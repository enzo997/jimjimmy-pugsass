extends ./parts/layout.pug

prepend meta
    title jim jimmy
    
block main-wrapper
    .home-page
        //- section banner top
        section.home-page--banner-top
            .home-page--banner-top--background-full-screen
                video( playsinline="" autoplay="" muted="" loop="" poster="/assets/video/poster-video-home.png")
                    source(src="/assets/video/Marquee-Homepage-22mb.mp4", type="video/mp4")
                //- img(src="/assets/imgs/default/banner-top.png", alt="banner-top")
                .home-page--banner-top--content
                    //- 37 character limit
                    .home-page--content-h1 
                        h1.home-page--banner-top--content--title-h1 Beautiful Marquees for Hire   
                    .home-page--banner-top--content--description 
                        p Hand crafted in York our beautiful marquees bring timeless elegance to your celebration and an atmosphere of  luxury to make your party perfect.
                    .btn-view-marquees 
                        a(href="our-marquees.html") VIEW MARQUEES
        //- section about
        section.home-page--about-us
            .home-page--about-us--image-behinde-section
                img(src="/assets/imgs/default/inage-behinde.png", alt="inage-behinde")
            .container
                .home-page--about-us--content-group
                    .home-page--about-us--col-left
                        .home-page--about-us--cont
                            h4.home-page--about-us--title-h4 About us
                            .line-under
                            .home-page--about-us--description 
                                p Friends Jim and Jimmy founded JimJimmy Marquees with a shared vision to create an exciting outdoor business built on the values of collaborative and respectful customer service, beautifully made products, sustainability and...fun.
                            a(href="about-us.html")
                                .btn-read-more READ MORE
                    .home-page--about-us--col-right
                        .home-page--about-us--cont-image
                            img(src="/assets/imgs/default/about.png", alt="about")
        //- section our marquees
        section.home-page--our-marquees
            .home-page--our-marquees--image-behinde-section
                img(src="/assets/imgs/default/image-behinde-1.png", alt="inage-behinde")
            .container
                .home-page--our-marquees--cont-group
                    a(href="our-marquees.html")
                        .btn-view-all VIEW ALL
                    h4.our-marquees--title-h4 Our Marquees
                    .line-under
                    .home-page--our-marquess--slick
                        .row.row-custom-1.row-custom
                            .col-lg-4.col-md-4.col-sm-12.col-12
                                .home-page--our-marquees--cont-image
                                    img(src="/assets/imgs/default/wills.png", alt="wills")
                            .col-lg-8.col-md-8.col-sm-12.col-12
                                .home-page--our-marquees--cont-group-box
                                    h5.home-page--our-marquees--title-h5 Wills 9/23
                                    .home-page--our-marquees--descripton 
                                        p Hand made in York with painstaking attention to detail our beautiful pole-tents feature breathable canvas canopies and posses a timeless elegance that will bring an evocative aura of luxury to your celebration.
                                    a(href="single-our-marquees.html")
                                        .btn-view-detail VIEW DETAIL
                        .row.row-custom-2.row-custom
                            .col-lg-4.col-md-4.col-sm-12.col-12
                                .home-page--our-marquees--cont-image

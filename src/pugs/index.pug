                            li
                                a(href=item.href)=item.label
                .gallery--content-group  
                    -
                        let data_image = [
                            {src:"/assets/imgs/default/gallery.png", alt:"gallery"},
                            {src:"/assets/imgs/default/gallery-1.png", alt:"gallery-1"},
                            {src:"/assets/imgs/default/gallery-2.png", alt:"gallery-2"},
                            {src:"/assets/imgs/default/gallery-3.png", alt:"gallery-3"},
                            {src:"/assets/imgs/default/gallery-4.png", alt:"gallery-4"},
                            {src:"/assets/imgs/default/gallery-5.png  ", alt:"wills-5"}
                        ]
                    .row.row-custom
                        each item in data_image
                            .col-lg-4.col-md-4.col-sm-12.col-12.col-custom
                                .gallery--cont-image
                                    .background--hidden
                                    .background-hover
                                        .content-group
                                            .cont-icon
                                                img(src="/assets/imgs/default/icon-3d.png", alt="icon-3d")
                                            .cont-text EXPLORE 3D SPACE
                                    img(src=item.src,alt=item.alt)
                    a(href="gallery.html")
